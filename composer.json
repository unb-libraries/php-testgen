{
    "name": "trupal/trupal",
    "description": "Auto-generate automated testing.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":"UNB Libraries",
            "email": "libsupport@unb.ca"
        },
        {
            "name": "Patrick Schilf",
            "email": "pschilf@unb.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "trupal/composer-install": "dev-dev",
        "symfony/config": "^4.4",
        "symfony/console": "~3",
        "symfony/dependency-injection": "^4.4",
        "symfony/yaml": "^4.4",
        "twig/twig": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Trupal\\Core\\": "Core/src",
            "Trupal\\Core\\Test\\": "Core/tests/phpunit/src",
            "Trupal\\Console\\": "Console/src",
            "Trupal\\Console\\Test\\": "Console/tests/phpunit/src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    },
    "extra": {
        "trupal-extension-install-path": "extend/"
    }
}
